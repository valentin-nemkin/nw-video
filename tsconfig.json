{
  "compilerOptions": {
    /* === Базовые настройки === */
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    /* === Модули и резолвинг === */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* === JSX и React === */
    "jsx": "react-jsx",
    "incremental": true,
    /* === Плагины Next.js === */
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* === Алиасы путей === */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  /* === Что включать === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  /* === Что исключать === */
  "exclude": [
    "node_modules"
  ]
}
